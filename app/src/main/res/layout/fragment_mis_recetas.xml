<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisRecetas">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="807dp"
            android:layout_height="932dp"
            android:layout_marginStart="-220dp"
            android:layout_marginTop="-80dp"
            android:rotation="-90"
            android:src="@drawable/fondo_recetas_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewNombreReceta"
            android:layout_width="267dp"
            android:layout_height="44dp"

            android:layout_marginTop="40dp"
            android:background="@color/texto_primario"
            android:backgroundTint="@color/texto_primario"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textViewIngredientes"
            android:layout_width="267dp"
            android:layout_height="184dp"

            android:background="@color/texto_primario"
            android:backgroundTint="@color/texto_primario"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNombreReceta" />

        <TextView
            android:id="@+id/textViewPreparacion"
            android:layout_width="267dp"
            android:layout_height="114dp"

            android:background="@color/texto_primario"
            android:backgroundTint="@color/texto_primario"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewIngredientes" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/textMisRecetas"
            android:textColor="@color/texto_icono"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>