<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/primario_oscuro"
        app:tabIconTint="@color/texto_primario"
        app:tabIndicatorColor="@color/texto_icono">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_home"
            android:text=" " />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabOpciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_opciones"
            android:text=" " />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabRecetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_recetas"
            android:text=" " />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabMisIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_mis_ingredientes"
            android:text=" " />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_perfil"
            android:text=" " />
    </com.google.android.material.tabs.TabLayout>
</LinearLayout>