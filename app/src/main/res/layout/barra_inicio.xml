<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutInicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Large">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_iniciar" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnRegistrarse" />

    </com.google.android.material.tabs.TabLayout>
</LinearLayout>